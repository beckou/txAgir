            android:id="@+id/eclairer"
            android:textColor="#e09090"
            android:textSize="70sp"
            android:textIsSelectable="true"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40sp"

            />

        <TextView
