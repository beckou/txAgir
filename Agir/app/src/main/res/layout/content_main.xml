<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tx.agir.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/relativeLayout">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:visibility="visible"
        android:id="@+id/mainLayout">



        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/revert"
            android:background="#3d3b78"
            app:backgroundTint="#f7ffbab4"
            app:rippleColor="#f7140f0f"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="146dp"
            android:layout_marginRight="19dp"

            android:tint="#ffffff"
            android:visibility="invisible" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                style="@android:style/Widget.DeviceDefault.Light.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FR"
                android:id="@+id/FR_button"
                android:clickable="false"
                android:enabled="true"
                android:layout_above="@+id/R"
                android:layout_alignLeft="@+id/revert"
                android:layout_alignStart="@+id/revert"
                android:background="@drawable/my_button_bg"
                android:textColor="#ffffff" />

            <Button
                style="@android:style/Widget.DeviceDefault.Light.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN"
                android:id="@+id/EN_button"
                android:layout_alignTop="@+id/FR_button"
                android:layout_alignRight="@+id/adapter"
                android:layout_alignEnd="@+id/adapter"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:clickable="false"
                android:background="@drawable/my_button_bg"

                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/shake"
            android:id="@+id/shake"
            android:textSize="70sp"
            android:textColor="#f9bdbd"
            android:singleLine="false"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="46sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/adapt"
            android:id="@+id/adapt"
            android:textSize="70sp"
            android:textColor="#f9bdbd"
            android:singleLine="false"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14sp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/agiter"
            android:id="@+id/agiter"
            android:textSize="70sp"
            android:textColor="#f9bdbd"
            android:singleLine="false"
            android:visibility="invisible"
            android:layout_centerVertical="true"

